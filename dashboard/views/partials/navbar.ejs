<nav class="gradient-bg shadow-lg" style="background: linear-gradient(135deg, <%= dashboardSettings.brandColor %> 0%, <%= dashboardSettings.brandColorSecondary %> 100%);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <% if (dashboardSettings.logoUrl) { %>
            <img src="<%= dashboardSettings.logoUrl %>" alt="Logo" class="h-8 w-8 mr-3">
          <% } else { %>
            <i class="fas fa-robot text-white text-2xl mr-3"></i>
          <% } %>
          <span class="text-white text-xl font-bold"><%= dashboardSettings.brandName %></span>
        </a>
      </div>
      
      <div class="flex items-center space-x-4">
        <% if (isAuthenticated) { %>
          <div class="flex items-center space-x-3">
            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" 
                 alt="Avatar" 
                 class="w-10 h-10 rounded-full border-2 border-white">
            <span class="text-white font-medium"><%= user.username %></span>
            <a href="/auth/logout" class="bg-white text-purple-600 px-4 py-2 rounded-lg font-medium hover:bg-gray-100 transition">
              <i class="fas fa-sign-out-alt mr-2"></i>Logout
            </a>
          </div>
        <% } else { %>
          <a href="/auth/discord" class="bg-white text-purple-600 px-6 py-2 rounded-lg font-medium hover:bg-gray-100 transition">
            <i class="fab fa-discord mr-2"></i>Login with Discord
          </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
