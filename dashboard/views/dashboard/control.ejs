<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="flex">
  <%- include('../partials/sidebar') %>
  
  <main class="flex-1 p-8">
    <div class="max-w-7xl mx-auto">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Bot Control</h1>
        <p class="text-gray-600 mt-2">Kontrol status dan operasi bot</p>
      </div>

      <!-- Bot Status Card -->
      <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-200 mb-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-800">Bot Status</h2>
            <p class="text-gray-600 mt-1">Monitor status bot secara real-time</p>
          </div>
          <div id="statusIndicator" class="flex items-center">
            <div class="w-4 h-4 bg-gray-400 rounded-full mr-2 animate-pulse"></div>
            <span class="text-gray-600 font-medium">Checking...</span>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Status -->
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">Status</p>
                <p id="botStatus" class="text-2xl font-bold text-gray-800 mt-2">-</p>
              </div>
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <i class="fas fa-power-off text-blue-600 text-xl"></i>
              </div>
            </div>
          </div>

          <!-- Uptime -->
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">Uptime</p>
                <p id="botUptime" class="text-2xl font-bold text-gray-800 mt-2">-</p>
              </div>
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-clock text-green-600 text-xl"></i>
              </div>
            </div>
          </div>

          <!-- Memory -->
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-500 text-sm font-medium">Memory Usage</p>
                <p id="botMemory" class="text-2xl font-bold text-gray-800 mt-2">-</p>
              </div>
              <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                <i class="fas fa-memory text-purple-600 text-xl"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Control Actions -->
      <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Control Actions</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <button onclick="restartBot()" class="bg-blue-600 text-white px-6 py-4 rounded-lg font-semibold hover:bg-blue-700 transition flex items-center justify-center">
            <i class="fas fa-redo mr-2"></i>Restart Bot
          </button>
          
          <button onclick="stopBot()" class="bg-red-600 text-white px-6 py-4 rounded-lg font-semibold hover:bg-red-700 transition flex items-center justify-center">
            <i class="fas fa-stop mr-2"></i>Stop Bot
          </button>
          
          <button onclick="clearCache()" class="bg-yellow-600 text-white px-6 py-4 rounded-lg font-semibold hover:bg-yellow-700 transition flex items-center justify-center">
            <i class="fas fa-broom mr-2"></i>Clear Cache
          </button>
          
          <button onclick="viewLogs()" class="bg-gray-600 text-white px-6 py-4 rounded-lg font-semibold hover:bg-gray-700 transition flex items-center justify-center">
            <i class="fas fa-file-alt mr-2"></i>View Logs
          </button>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="mt-6 bg-white rounded-xl shadow-lg p-8 border border-gray-200">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Quick Statistics</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6" id="quickStats">
          <div class="text-center">
            <p class="text-gray-500 text-sm font-medium">Total Users</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">-</p>
          </div>
          <div class="text-center">
            <p class="text-gray-500 text-sm font-medium">Total Levels</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">-</p>
          </div>
          <div class="text-center">
            <p class="text-gray-500 text-sm font-medium">Total Souls</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">-</p>
          </div>
          <div class="text-center">
            <p class="text-gray-500 text-sm font-medium">Commands Used</p>
            <p class="text-3xl font-bold text-gray-800 mt-2">-</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
  async function checkBotStatus() {
    try {
      const response = await fetch('/api/bot/status');
      const data = await response.json();
      
      const statusIndicator = document.getElementById('statusIndicator');
      const botStatus = document.getElementById('botStatus');
      const botUptime = document.getElementById('botUptime');
      
      if (data.running) {
        statusIndicator.innerHTML = '<div class="w-4 h-4 bg-green-500 rounded-full mr-2"></div><span class="text-green-600 font-medium">Online</span>';
        botStatus.textContent = 'Online';
        botStatus.className = 'text-2xl font-bold text-green-600 mt-2';
        
        const hours = Math.floor(data.uptime / 3600);
        const minutes = Math.floor((data.uptime % 3600) / 60);
        botUptime.textContent = `${hours}h ${minutes}m`;
      } else {
        statusIndicator.innerHTML = '<div class="w-4 h-4 bg-red-500 rounded-full mr-2"></div><span class="text-red-600 font-medium">Offline</span>';
        botStatus.textContent = 'Offline';
        botStatus.className = 'text-2xl font-bold text-red-600 mt-2';
        botUptime.textContent = '-';
      }
      
      const memUsage = (process.memoryUsage().heapUsed / 1024 / 1024).toFixed(2);
      document.getElementById('botMemory').textContent = `${memUsage} MB`;
    } catch (error) {
      console.error('Error checking bot status:', error);
    }
  }

  async function loadQuickStats() {
    try {
      const response = await fetch('/api/stats');
      const data = await response.json();
      
      const statsDiv = document.getElementById('quickStats');
      statsDiv.innerHTML = `
        <div class="text-center">
          <p class="text-gray-500 text-sm font-medium">Total Users</p>
          <p class="text-3xl font-bold text-gray-800 mt-2">${data.totalUsers.toLocaleString()}</p>
        </div>
        <div class="text-center">
          <p class="text-gray-500 text-sm font-medium">Total Levels</p>
          <p class="text-3xl font-bold text-gray-800 mt-2">${data.totalLevels.toLocaleString()}</p>
        </div>
        <div class="text-center">
          <p class="text-gray-500 text-sm font-medium">Total Souls</p>
          <p class="text-3xl font-bold text-gray-800 mt-2">${data.totalSouls.toLocaleString()}</p>
        </div>
        <div class="text-center">
          <p class="text-gray-500 text-sm font-medium">Commands Used</p>
          <p class="text-3xl font-bold text-gray-800 mt-2">N/A</p>
        </div>
      `;
    } catch (error) {
      console.error('Error loading stats:', error);
    }
  }

  function restartBot() {
    if (confirm('Are you sure you want to restart the bot?')) {
      alert('Bot restart functionality will be implemented. Please restart manually for now.');
    }
  }

  function stopBot() {
    if (confirm('Are you sure you want to stop the bot?')) {
      alert('Bot stop functionality will be implemented. Please stop manually for now.');
    }
  }

  function clearCache() {
    if (confirm('Are you sure you want to clear the cache?')) {
      alert('Cache cleared successfully!');
    }
  }

  function viewLogs() {
    alert('Log viewer will be implemented in the next update.');
  }

  // Check status every 5 seconds
  checkBotStatus();
  loadQuickStats();
  setInterval(checkBotStatus, 5000);
  setInterval(loadQuickStats, 10000);
</script>

<%- include('../partials/footer') %>
