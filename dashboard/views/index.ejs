<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="min-h-screen flex flex-col">
  <!-- Hero Section -->
  <section class="gradient-bg py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl font-bold text-white mb-6">
        <i class="fas fa-robot mr-4"></i>Villain Seraphyx Manager Bot
      </h1>
      <p class="text-xl text-white opacity-90 mb-8">
        Modern Dashboard untuk Mengontrol Bot Discord Anda
      </p>
      
      <% if (!isAuthenticated) { %>
        <a href="/auth/discord" class="inline-block bg-white text-purple-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition shadow-lg">
          <i class="fab fa-discord mr-2"></i>Login dengan Discord
        </a>
      <% } else { %>
        <a href="/dashboard" class="inline-block bg-white text-purple-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition shadow-lg">
          <i class="fas fa-tachometer-alt mr-2"></i>Buka Dashboard
        </a>
      <% } %>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">Fitur Dashboard</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card-hover bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-users text-purple-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">User Management</h3>
          <p class="text-gray-600">Kelola data user, economy, dan level dengan mudah</p>
        </div>

        <!-- Feature 2 -->
        <div class="card-hover bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-cog text-blue-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Configuration</h3>
          <p class="text-gray-600">Edit konfigurasi bot langsung dari web interface</p>
        </div>

        <!-- Feature 3 -->
        <div class="card-hover bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-chart-line text-green-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Analytics</h3>
          <p class="text-gray-600">Lihat statistik dan analytics bot secara real-time</p>
        </div>

        <!-- Feature 4 -->
        <div class="card-hover bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-power-off text-red-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Bot Control</h3>
          <p class="text-gray-600">Start, stop, dan restart bot dari dashboard</p>
        </div>

        <!-- Feature 5 -->
        <div class="card-hover bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-database text-yellow-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Database Sync</h3>
          <p class="text-gray-600">Sinkronisasi data antara bot dan dashboard</p>
        </div>

        <!-- Feature 6 -->
        <div class="card-hover bg-white p-6 rounded-xl shadow-lg border border-gray-200">
          <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-shield-alt text-indigo-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-2">Secure Access</h3>
          <p class="text-gray-600">Login dengan Discord OAuth2 yang aman</p>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('partials/footer') %>
