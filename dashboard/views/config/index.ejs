<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-white" href="/dashboard/config">
                                <i class="fas fa-cog"></i> Configuration
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="fas fa-cog"></i> Bot Configuration</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshDiscordData()">
                                <i class="fas fa-sync-alt"></i> Refresh Discord Data
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="validateConfig()">
                                <i class="fas fa-check-circle"></i> Validate Config
                            </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success" onclick="exportConfig()">
                                <i class="fas fa-download"></i> Export
                            </button>
                            <button type="button" class="btn btn-sm btn-primary" onclick="importConfig()">
                                <i class="fas fa-upload"></i> Import
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Alerts -->
                <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                <!-- Discord Connection Status -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fab fa-discord"></i> Discord Connection Status
                                </h5>
                                <% if (discordData && discordData.guild) { %>
                                <div class="d-flex align-items-center">
                                    <% if (discordData.guild.icon) { %>
                                    <img src="<%= discordData.guild.icon %>" alt="Guild Icon" class="rounded-circle me-3" width="48" height="48">
                                    <% } %>
                                    <div>
                                        <h6 class="mb-1"><%= discordData.guild.name %></h6>
                                        <small class="text-muted">
                                            <i class="fas fa-users"></i> <%= discordData.guild.memberCount %> members
                                            <span class="badge bg-success ms-2">Connected</span>
                                        </small>
                                    </div>
                                </div>
                                <% } else { %>
                                <div class="text-danger">
                                    <i class="fas fa-exclamation-triangle"></i> 
                                    Unable to connect to Discord. Please check your bot token and permissions.
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Configuration Sections -->
                <div class="row">
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-hashtag text-primary"></i> Channels
                                </h5>
                                <p class="card-text">Configure Discord channels for various bot features like welcome messages, logs, and more.</p>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <% if (discordData && discordData.channels) { %>
                                        Available: <%= Object.values(discordData.channels).flat().length %> channels
                                        <% } else { %>
                                        Unable to fetch channel data
                                        <% } %>
                                    </small>
                                </div>
                                <a href="/dashboard/config/channels" class="btn btn-primary">
                                    <i class="fas fa-cog"></i> Configure Channels
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-user-tag text-success"></i> Roles
                                </h5>
                                <p class="card-text">Set up roles for staff hierarchy, level rewards, and special permissions.</p>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <% if (discordData && discordData.roles) { %>
                                        Available: <%= discordData.roles.length %> roles
                                        <% } else { %>
                                        Unable to fetch role data
                                        <% } %>
                                    </small>
                                </div>
                                <a href="/dashboard/config/roles" class="btn btn-success">
                                    <i class="fas fa-cog"></i> Configure Roles
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-sliders-h text-warning"></i> Features
                                </h5>
                                <p class="card-text">Adjust bot features like XP system, economy settings, and cooldowns.</p>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        Leveling, Economy, Tickets, etc.
                                    </small>
                                </div>
                                <a href="/dashboard/config/features" class="btn btn-warning">
                                    <i class="fas fa-cog"></i> Configure Features
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-smile text-info"></i> Emojis
                                </h5>
                                <p class="card-text">Customize emojis used throughout the bot for better visual experience.</p>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <% if (discordData && discordData.emojis) { %>
                                        Server emojis: <%= discordData.emojis.length %>
                                        <% } else { %>
                                        Custom and Unicode emojis
                                        <% } %>
                                    </small>
                                </div>
                                <a href="/dashboard/config/emojis" class="btn btn-info">
                                    <i class="fas fa-cog"></i> Configure Emojis
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-images text-secondary"></i> Images
                                </h5>
                                <p class="card-text">Set up image URLs for embeds, welcome messages, and other visual elements.</p>
                                <div class="mb-2">
                                    <small class="text-muted">
                                        Embed images, GIFs, assets
                                    </small>
                                </div>
                                <a href="/dashboard/config/images" class="btn btn-secondary">
                                    <i class="fas fa-cog"></i> Configure Images
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Real-time Status -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-sync-alt"></i> Real-time Sync Status
                                </h5>
                                <div id="syncStatus" class="d-flex align-items-center">
                                    <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <span>Checking sync status...</span>
                                </div>
                                <div id="lastUpdate" class="mt-2 text-muted small"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Import Modal -->
    <div class="modal fade" id="importModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import Configuration</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="configFile" class="form-label">Select Configuration File</label>
                        <input type="file" class="form-control" id="configFile" accept=".json">
                    </div>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> Importing will overwrite your current configuration. Make sure to export a backup first.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="processImport()">Import</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Socket.IO connection for real-time updates
        const socket = io();
        
        socket.on('connect', () => {
            updateSyncStatus('Connected', 'success');
        });
        
        socket.on('disconnect', () => {
            updateSyncStatus('Disconnected', 'danger');
        });
        
        socket.on('configUpdated', (data) => {
            showNotification(`Configuration updated by ${data.updatedBy}`, 'success');
            updateLastUpdate(data.timestamp);
        });
        
        function updateSyncStatus(status, type) {
            const statusEl = document.getElementById('syncStatus');
            statusEl.innerHTML = `
                <span class="badge bg-${type}">${status}</span>
                <span class="ms-2">Real-time sync ${status.toLowerCase()}</span>
            `;
        }
        
        function updateLastUpdate(timestamp) {
            const lastUpdateEl = document.getElementById('lastUpdate');
            lastUpdateEl.textContent = `Last updated: ${new Date(timestamp).toLocaleString()}`;
        }
        
        function showNotification(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                <i class="fas fa-info-circle"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('main').insertBefore(alertDiv, document.querySelector('main').firstChild);
            
            // Auto dismiss after 5 seconds
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
        
        async function refreshDiscordData() {
            try {
                showNotification('Refreshing Discord data...', 'info');
                const response = await fetch('/dashboard/config/api/discord-data');
                const result = await response.json();
                
                if (result.success) {
                    showNotification('Discord data refreshed successfully', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showNotification('Failed to refresh Discord data: ' + result.error, 'danger');
                }
            } catch (error) {
                showNotification('Error refreshing Discord data: ' + error.message, 'danger');
            }
        }
        
        async function validateConfig() {
            try {
                showNotification('Validating configuration...', 'info');
                const response = await fetch('/dashboard/config/api/validate');
                const result = await response.json();
                
                if (result.success) {
                    const invalidCount = Object.keys(result.validation.invalid).length;
                    if (invalidCount > 0) {
                        showNotification(`Configuration validated with ${invalidCount} warnings`, 'warning');
                    } else {
                        showNotification('Configuration is valid', 'success');
                    }
                } else {
                    showNotification('Validation failed: ' + result.error, 'danger');
                }
            } catch (error) {
                showNotification('Error validating configuration: ' + error.message, 'danger');
            }
        }
        
        async function exportConfig() {
            try {
                const response = await fetch('/dashboard/config/api/export', { method: 'POST' });
                const blob = await response.blob();
                
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `bot-config-${new Date().toISOString().split('T')[0]}.json`;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                window.URL.revokeObjectURL(url);
                
                showNotification('Configuration exported successfully', 'success');
            } catch (error) {
                showNotification('Error exporting configuration: ' + error.message, 'danger');
            }
        }
        
        function importConfig() {
            const modal = new bootstrap.Modal(document.getElementById('importModal'));
            modal.show();
        }
        
        async function processImport() {
            const fileInput = document.getElementById('configFile');
            const file = fileInput.files[0];
            
            if (!file) {
                showNotification('Please select a file to import', 'warning');
                return;
            }
            
            try {
                const text = await file.text();
                const configData = JSON.parse(text);
                
                const response = await fetch('/dashboard/config/api/import', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ config: configData.config || configData })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('Configuration imported successfully', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('importModal')).hide();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showNotification('Import failed: ' + result.error, 'danger');
                }
            } catch (error) {
                showNotification('Error importing configuration: ' + error.message, 'danger');
            }
        }
        
        // Initialize sync status check
        setTimeout(() => {
            updateSyncStatus('Connected', 'success');
            updateLastUpdate(new Date());
        }, 1000);
    </script>
</body>
</html>