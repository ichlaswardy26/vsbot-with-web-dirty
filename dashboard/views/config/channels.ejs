<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    <style>
        .channel-group {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .channel-group h6 {
            color: #495057;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }
        .select2-container--default .select2-selection--single {
            height: 38px;
            border: 1px solid #ced4da;
        }
        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 36px;
            padding-left: 12px;
        }
        .channel-preview {
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/dashboard/config">
                                <i class="fas fa-cog"></i> Configuration
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active text-white" href="/dashboard/config/channels">
                                <i class="fas fa-hashtag"></i> Channels
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="fas fa-hashtag"></i> Channel Configuration</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/dashboard/config" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to Config
                        </a>
                    </div>
                </div>

                <form method="POST" action="/dashboard/config/channels">
                    <!-- Welcome & Goodbye Channels -->
                    <div class="channel-group">
                        <h6><i class="fas fa-hand-wave text-success"></i> Welcome & Goodbye</h6>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="welcome" class="form-label">Welcome Channel</label>
                                <select name="channels[welcome]" id="welcome" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.welcome === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="welcome2" class="form-label">Welcome Channel 2</label>
                                <select name="channels[welcome2]" id="welcome2" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.welcome2 === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="welcomeLog" class="form-label">Welcome Log</label>
                                <select name="channels[welcomeLog]" id="welcomeLog" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.welcomeLog === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Boost Channels -->
                    <div class="channel-group">
                        <h6><i class="fas fa-rocket text-primary"></i> Server Boost</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="boostAnnounce" class="form-label">Boost Announce</label>
                                <select name="channels[boostAnnounce]" id="boostAnnounce" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.boostAnnounce === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="boostLogs" class="form-label">Boost Logs</label>
                                <select name="channels[boostLogs]" id="boostLogs" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.boostLogs === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Chat Channels -->
                    <div class="channel-group">
                        <h6><i class="fas fa-comments text-info"></i> Chat Channels</h6>
                        <div class="row">
                            <% for (let i = 1; i <= 5; i++) { %>
                            <div class="col-md-4 mb-3">
                                <label for="chat<%= i %>" class="form-label">Chat Channel <%= i %></label>
                                <select name="channels[chat<%= i %>]" id="chat<%= i %>" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config['chat' + i] === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <% } %>
                        </div>
                    </div>

                    <!-- Giveaway Channels -->
                    <div class="channel-group">
                        <h6><i class="fas fa-gift text-warning"></i> Giveaway Channels</h6>
                        <div class="row">
                            <% for (let i = 1; i <= 4; i++) { %>
                            <div class="col-md-3 mb-3">
                                <label for="giveaway<%= i %>" class="form-label">Giveaway <%= i %></label>
                                <select name="channels[giveaway<%= i %>]" id="giveaway<%= i %>" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config['giveaway' + i] === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <% } %>
                            <div class="col-md-3 mb-3">
                                <label for="giveawayWinner" class="form-label">Winner Announce</label>
                                <select name="channels[giveawayWinner]" id="giveawayWinner" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.giveawayWinner === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Voice System -->
                    <div class="channel-group">
                        <h6><i class="fas fa-microphone text-danger"></i> Voice System</h6>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="joinToCreate" class="form-label">Join to Create</label>
                                <select name="channels[joinToCreate]" id="joinToCreate" class="form-select channel-select">
                                    <option value="">Select Voice Channel</option>
                                    <% if (channels && channels.voice) { %>
                                        <% channels.voice.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.joinToCreate === channel.id ? 'selected' : '' %>>
                                            üîä <%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="voiceCategory" class="form-label">Voice Category</label>
                                <select name="channels[voiceCategory]" id="voiceCategory" class="form-select channel-select">
                                    <option value="">Select Category</option>
                                    <% if (categories) { %>
                                        <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>" 
                                                <%= config.voiceCategory === category.id ? 'selected' : '' %>>
                                            üìÅ <%= category.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="voiceLog" class="form-label">Voice Logs</label>
                                <select name="channels[voiceLog]" id="voiceLog" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.voiceLog === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Other Channels -->
                    <div class="channel-group">
                        <h6><i class="fas fa-cogs text-secondary"></i> Other Channels</h6>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="ticketLogs" class="form-label">Ticket Logs</label>
                                <select name="channels[ticketLogs]" id="ticketLogs" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.ticketLogs === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="confession" class="form-label">Confession</label>
                                <select name="channels[confession]" id="confession" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.confession === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="support" class="form-label">Support</label>
                                <select name="channels[support]" id="support" class="form-select channel-select">
                                    <option value="">Select Channel</option>
                                    <% if (channels && channels.text) { %>
                                        <% channels.text.forEach(channel => { %>
                                        <option value="<%= channel.id %>" 
                                                data-category="<%= channel.categoryName %>"
                                                <%= config.support === channel.id ? 'selected' : '' %>>
                                            #<%= channel.name %>
                                        </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                                <div class="channel-preview mt-1"></div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/dashboard/config" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Channel Configuration
                        </button>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Select2 for better dropdown experience
            $('.channel-select').select2({
                placeholder: 'Select a channel...',
                allowClear: true,
                templateResult: formatChannel,
                templateSelection: formatChannelSelection
            });
            
            // Update channel preview on change
            $('.channel-select').on('change', function() {
                const selectedOption = $(this).find('option:selected');
                const preview = $(this).siblings('.channel-preview');
                
                if (selectedOption.val()) {
                    const category = selectedOption.data('category') || 'No Category';
                    preview.html(`<i class="fas fa-folder"></i> ${category}`);
                } else {
                    preview.html('');
                }
            });
            
            // Trigger initial preview update
            $('.channel-select').trigger('change');
        });
        
        function formatChannel(channel) {
            if (!channel.id) return channel.text;
            
            const $channel = $(channel.element);
            const category = $channel.data('category') || 'No Category';
            
            return $(`
                <div>
                    <div>${channel.text}</div>
                    <small class="text-muted"><i class="fas fa-folder"></i> ${category}</small>
                </div>
            `);
        }
        
        function formatChannelSelection(channel) {
            return channel.text;
        }
    </script>
</body>
</html>